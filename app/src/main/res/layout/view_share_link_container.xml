<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shareLink"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shareLinkTitle"
        style="@style/SmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStandardMedium"
        android:layout_marginTop="@dimen/marginStandardMedium"
        android:text="@string/sharedLinkTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/marginStandardVerySmall"
        android:src="@drawable/ic_link"
        app:layout_constraintBottom_toBottomOf="@id/shareLinkTitle"
        app:layout_constraintStart_toEndOf="@+id/shareLinkTitle"
        app:layout_constraintTop_toTopOf="@id/shareLinkTitle"
        app:tint="@color/title"
        tools:ignore="ContentDescription" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/shareLinkSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shareLinkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStandardSmall"
        android:text="@string/allDisabled"
        app:layout_constraintBottom_toTopOf="@id/shareLinkUrl"
        app:layout_constraintStart_toStartOf="@id/shareLinkTitle"
        app:layout_constraintTop_toBottomOf="@id/shareLinkTitle"
        app:layout_goneMarginBottom="@dimen/marginStandardMedium" />

    <com.infomaniak.drive.views.UrlDisplayView
        android:id="@+id/shareLinkUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginStandardMedium"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/officePermissionView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareLinkStatus"
        tools:visibility="visible" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/officePermissionView"
        style="@style/BorderedCardViewInfomaniak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginStandardMedium"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/shareLinkSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareLinkUrl"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginStandardMedium">

            <ImageView
                android:id="@+id/officePermissionIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:srcCompat="@drawable/ic_view"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/officePermissionValue"
                style="@style/SmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginStandardMedium"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/shareLinkOfficePermissionReadTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chevron"
                app:layout_constraintStart_toEndOf="@id/officePermissionIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="90"
                android:src="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareLinkSettings"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginStandardSmall"
        android:text="@string/fileShareLinkSettingsTitle"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/officePermissionView"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
